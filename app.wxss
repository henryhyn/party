@import 'weui.wxss';
@import 'weui_fix.wxss';

page {
  background-color: #f2f2f2;
}

.hui-round {
  border-radius: 10rpx;
}

.hui-vskip {
  margin-top: 30rpx !important;
}

/* 大型列表: 列表页 */

.hui-card {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.hui-info-item {
  font-size: 20rpx;
  color: #666;
  margin-right: 20rpx;
}

/* 更多  */

.more {
  float: right;
}

.more text {
  font-size: 24rpx !important;
  vertical-align: middle;
  margin-right: 30rpx;
  color: #1f4ba5 !important;
}

/* 面板 */

.hui-panel {
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: white;
}

.hui-panel-title {
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
}

.hui-panel-title__bd {
  flex: 1;
}

.hui-panel-title__ft {
  padding-right: 30rpx;
}

.hui-panel-title text {
  font-size: 30rpx;
  color: #666;
}



/* 操作工具条 */

.hui-operation {
  background-color: #f7f7fa;
  border-top: 1px solid #ceced1;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
}

.hui-operation-item {
  padding: 30rpx;
  text-align: center;
  flex: 1;
}

.hui-operation-vskip {
  padding-top: 120rpx;
}

/* 缩略图 */

image.hui-image {
  width: 100%;
  display: block;
}

/* Markdown 输出 */

.hui-md-output {
  font-size: 28rpx;
  color: #333;
}

.h2_class {
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}

.h3_class {
  margin-top: 30rpx;
  margin-bottom: 25rpx;
}

.h4_class {
  margin-top: 25rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.p_class {
  text-align: justify;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

.img_class {
  max-width: 100%;
}
