@import 'weui.wxss';
@import 'weui_fix.wxss';

page {
  background-color: #f2f2f2;
}

/* 大型列表: 列表页 */

.hui-list-more {
  text-align: center;
  padding-bottom: 30rpx;
}

/* 小型列表: 详情页 */

.hui-list {
  padding-left: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  background-color: white;
}

.hui-list-item + .hui-list-item {
  border-top: 1px solid #f2f2f2;
  padding-top: 20rpx;
  margin-top: 20rpx;
}

/* 更多  */

.more {
  float: right;
}

.hui-list .more {
  padding-right: 30rpx;
}

.more text {
  font-size: 24rpx !important;
  vertical-align: middle;
  margin-right: 30rpx;
  color: #1f4ba5 !important;
}

.more image {
  width: 9rpx;
  height: 16rpx;
  vertical-align: middle;
}

/* 面板 */

.hui-panel {
  margin-top: 30rpx;
  padding: 30rpx;
  background-color: white;
}

.hui-panel-title {
  border-bottom: 1px solid #f2f2f2;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
}

.hui-panel-title text {
  font-size: 30rpx;
  color: #666;
}

.hui-panel-title .weui-cell__ft_in-access {
  padding-right: 0;
}

/* 操作工具条 */

.hui-operation {
  background-color: #f7f7fa;
  border-top: 1px solid #ceced1;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
}

.hui-operation-item {
  padding: 30rpx;
  text-align: center;
  flex: 1;
}

.hui-operation-vskip {
  padding-top: 120rpx;
}

/* 缩略图 */

image.hui-image {
  width: 100%;
  display: block;
}

.hui-thumbnail {
  display: inline-block;
  width: 210rpx;
  height: 210rpx;
  margin-bottom: 30rpx;
  margin-left: 30rpx;
}

.hui-thumbnail > image {
  width: 210rpx;
  height: 210rpx;
}

/* 表单样式 */

.hui-form {
  display: block;
  overflow: auto;
  padding-bottom: 50rpx;
}

.hui-form-text {
  font-size: 28rpx;
  margin: 20rpx 30rpx;
  color: #666;
}

.hui-form-input {
  border-radius: 10rpx;
  font-size: 32rpx;
  padding: 20rpx 10rpx;
  background-color: #f2f2f2;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.input-placeholder, .textarea-placeholder {
  color: lightgray;
}

.hui-form-button {
  margin: 20rpx 30rpx;
}

textarea {
  width: 670rpx;
}

/* Markdown 输出 */

.hui-md-output {
  font-size: 28rpx;
  color: #333;
}

.h2_class {
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}

.h3_class {
  margin-top: 30rpx;
  margin-bottom: 25rpx;
}

.h4_class {
  margin-top: 25rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.p_class {
  text-align: justify;
  margin-bottom: 15rpx;
  line-height: 1.5;
}

.img_class {
  max-width: 100%;
}
