@import 'hui/hui.wxss';

page {
  background-color: #f8f8f8;
}

.hui-round {
  border-radius: 10rpx;
}

.hui-vskip {
  margin-top: 30rpx !important;
}

/* 大型列表: 列表页 */

.hui-card {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 30rpx;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}

.hui-card-title {
  margin-top: 10rpx;
}

.hui-info-item {
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
}

/* 面板 */

.hui-panel {
  margin-top: 30rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: white;
  border-top: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9;
}

.hui-panel-title {
  border-bottom: 1rpx solid #d9d9d9;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
}

.hui-panel-title__bd {
  color: #666;
  flex: 1;
}

.hui-panel-title__ft {
  color: #999;
  font-size: 30rpx;
  padding-right: 30rpx;
}

.hui-panel-body {
  font-size: 30rpx;
  line-height: 1.8;
}

/* 操作工具条 */

.hui-operation {
  background-color: #f7f7fa;
  border-top: 1rpx solid #ceced1;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
}

.hui-operation-item {
  padding: 30rpx;
  text-align: center;
  flex: 1;
}

.hui-operation-vskip {
  padding-top: 120rpx;
}

/* 缩略图 */

image.hui-image {
  width: 100%;
  display: block;
}

.hui-thumbnail {
  width: 180rpx;
  height: 180rpx;
  margin-top: 10rpx;
  margin-right: 10rpx;
}

/* media box */

.hui-media-box {
  display: flex;
}

.hui-media-box + .hui-media-box {
  border-top: 1rpx solid #d9d9d9;
  padding-top: 20rpx;
  margin-top: 20rpx;
}

.hui-media-box__hd {
  width: 90rpx;
  margin-right: 10rpx;
}

.hui-media-box__thumb {
  width: 90rpx;
  height: 90rpx;
}

.hui-media-box__bd {
  flex: 1;
}

/* 表单 */

form.hui-form {
  display: block;
  overflow: auto;
}

/* Markdown 输出 */

.h2_class {
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}

.h3_class {
  margin-top: 30rpx;
  margin-bottom: 25rpx;
}

.h4_class {
  margin-top: 25rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.p_class {
  text-align: justify;
  margin-bottom: 20rpx;
}

.img_class {
  max-width: 100%;
}
