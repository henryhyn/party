/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

text {
  font-family: MicroSoft Yahei;
  font-size: 24rpx;
  color: #666;
}

.hui-section-title {
  padding: 20rpx;
  border-top: 1px solid #f2f2f2;
}

.hui-section-title text {
  font-size: 36rpx;
  color: lightgray;
}

.hui-md-output {
  font-family: MicroSoft Yahei;
  font-size: 24rpx;
  color: #666;
  padding: 20rpx;
}

.h2_class {
  margin-top: 40rpx;
  margin-bottom: 30rpx;
}

.h3_class {
  margin-top: 30rpx;
  margin-bottom: 25rpx;
}

.h4_class {
  margin-top: 25rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.p_class {
  text-align: justify;
  margin-bottom: 10rpx;
  line-height: 1.2;
}

.img_class {
  max-width: 100%;
}
