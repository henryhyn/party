<scroll-view class="activity-list">
  <block wx:for="{{list}}" wx:key="item.id">
    <view class="activity-item" bindtap="show" data-id="{{item.id}}">
      <view>
        <image style="width:100%" src='{{item.cover}}' />
      </view>
      <view>
        <text>{{item.title}}</text>
      </view>
      <view class="activity-info">
        <text class="activity-info-item">类型: 徒步</text>
        <text class="activity-info-item">地点: 江苏路地铁站</text>
        <text class="activity-info-item">预算: 免费</text>
      </view>
    </view>
  </block>
</scroll-view>