<scroll-view class="activity-list">
  <block wx:for="{{list}}" wx:key="item.id">
    <view class="activity-item" bindtap="show" data-id="{{item.id}}">
      <image style="width:100%;display:block" src='{{item.cover}}' />
      <view>
        <text>{{item.title}}</text>
      </view>
      <view class="activity-info">
        <text class="activity-info-item">类型: {{item.category}}</text>
        <text class="activity-info-item">预算: <block wx:if='{{item.fee > 0}}'>¥{{item.fee}}</block><block wx:else>免费</block></text>
        <text class="activity-info-item">地点: {{item.address}}<block wx:if="{{item.crossroad}}"> ({{item.crossroad}})</block></text>
      </view>
    </view>
  </block>
</scroll-view>