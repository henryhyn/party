<scroll-view class="activity-list">
  <block wx:for="{{list}}" wx:key="item.id">
    <view class="activity-item" bindtap="show" data-id="{{item.id}}">
      <view>
        <image style="width:100%" src='{{item.cover}}' />
      </view>
      <view>
        <text>{{item.title}}</text>
      </view>
    </view>
  </block>
</scroll-view>