<scroll-view style='height: 100vh' scroll-y bindscrolltolower='nextPage'>
  <block wx:for='{{list}}' wx:key='item.id'>
    <navigator url='activity_show?id={{item.id}}' class='hui-card'>
      <image class='hui-image' src='{{item.cover}}' />
      <view class='hui-card-title'>
        <text>{{item.title}}</text>
      </view>
      <view>
        <text class='hui-info-item'>类型: {{item.category}}</text>
        <text class='hui-info-item'>预算: {{item.feeText}}</text>
        <text class='hui-info-item'>地点: {{item.fullAddress}}</text>
      </view>
    </navigator>
  </block>
  <block wx:if='{{hasMore}}'>
    <block wx:if='{{loading}}'>
      <view class='weui-loadmore'>
        <text class='weui-loading' />
        <text class='weui-loadmore__tips'>玩命加载中...</text>
      </view>
    </block>
  </block>
  <block wx:else>
    <view class='weui-loadmore'>
      <text class='weui-loadmore__tips'>没有更多啦~~~</text>
    </view>
  </block>
</scroll-view>