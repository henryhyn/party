<view>
  <image class='hui-image' src='{{instance.cover}}' />
  <view class='weui-cells'>
    <view bindtap='openMap' class='weui-cell weui-cell_access' hover-class='weui-cell_active'>
      <text class='weui-cell__bd'>地点: {{instance.fullAddress}}</text>
      <text class='weui-cell__ft weui-cell__ft_in-access' />
    </view>
    <view class='weui-cell'>
      <text class='weui-cell__bd'>类型: {{instance.category}}</text>
    </view>
    <view class='weui-cell'>
      <text class='weui-cell__bd'>预算: {{instance.feeText}}</text>
    </view>
    <view wx:if='{{instance.time && instance.time>0}}' class='weui-cell'>
      <text class='weui-cell__bd'>时长: {{instance.time}} 小时</text>
    </view>
  </view>
  <view class='hui-panel'>
    <view class='hui-panel-title' bindtap='openRoute' data-id='{{instance.id}}'>
      <text class='hui-panel-title__bd'>活动路线</text>
      <text class='hui-panel-title__ft weui-cell__ft_in-access' wx:if='{{instance.length && instance.length>0}}'>{{instance.length}} 公里</text>
    </view>
    <view class='hui-panel-body'>
      <text>{{instance.route}}</text>
    </view>
  </view>
  <view class='hui-panel'>
    <view class='hui-panel-title'>
      <text class='hui-panel-title__bd'>活动简介</text>
    </view>
    <view class='hui-panel-body'>
      <text>{{instance.summary}}</text>
    </view>
  </view>
  <view class='hui-panel'>
    <view class='hui-panel-title'>
      <text class='hui-panel-title__bd'>活动详情</text>
    </view>
    <view class='hui-panel-body'>
      <rich-text nodes='{{instance.content}}' />
    </view>
  </view>
  <view class='hui-operation-vskip' />
  <view class='hui-operation'>
    <view class='hui-operation-item' bindtap='goHome'>
      <text>首页</text>
    </view>
    <navigator class='hui-operation-item' url='../reviews/review_form?id={{instance.id}}&source=activity'>
      <text>写点评</text>
    </navigator>
  </view>
</view>