<view class="activity-show">
  <image style="width:100%;display:block" src='{{instance.cover}}' />
  <view class="hui-list">
    <view class="hui-list-item" bindtap="openMap">
      <text>地点: {{instance.fullAddress}}</text>
    </view>
    <view class="hui-list-item">
      <text>类型: {{instance.category}}</text>
    </view>
    <view class="hui-list-item">
      <text>预算: {{instance.feeText}}</text>
    </view>
  </view>
  <view class="hui-panel">
    <view class="hui-panel-title">
      <text>活动简介</text>
    </view>
    <view class="hui-panel-body">
      <text>{{instance.summary}}</text>
    </view>
  </view>
  <view class="hui-panel">
    <view class="hui-panel-title">
      <text>活动详情</text>
    </view>
    <view class="hui-panel-body hui-md-output">
      <rich-text nodes='{{instance.content}}' />
    </view>
  </view>
</view>