<view class="container">
  <image style="width:100%;display:block" src='{{instance.cover}}' />
  <view class="hui-list">
    <view class="hui-list-item" bindtap="openMap">
      <text>地点: {{instance.fullAddress}}</text>
      <view class="more">
        <image src="/image/icon/arrow-right.png"></image>
      </view>
    </view>
    <view class="hui-list-item">
      <text>类型: {{instance.category}}</text>
    </view>
    <view class="hui-list-item">
      <text>预算: {{instance.feeText}}</text>
    </view>
    <view wx:if="{{instance.time && instance.time>0}}" class="hui-list-item">
      <text>时长: {{instance.time}} 小时</text>
    </view>
  </view>
  <view class="hui-panel">
    <view class="hui-panel-title" bindtap="openRoute">
      <text>活动路线</text>
      <view class="more">
        <text wx:if="{{instance.length && instance.length>0}}">{{instance.length}} 公里</text>
        <image src="/image/icon/arrow-right.png"></image>
      </view>
    </view>
    <view class="hui-panel-body">
      <text>{{instance.route}}</text>
    </view>
  </view>
  <view class="hui-panel">
    <view class="hui-panel-title">
      <text>活动简介</text>
    </view>
    <view class="hui-panel-body">
      <text>{{instance.summary}}</text>
    </view>
  </view>
  <view class="hui-panel">
    <view class="hui-panel-title">
      <text>活动详情</text>
    </view>
    <view class="hui-panel-body hui-md-output">
      <rich-text nodes='{{instance.content}}' />
    </view>
  </view>
</view>