<form bindsubmit='submit' bindreset='reset'>
  <view class='weui-cells__title'>评论内容</view>
  <view class='weui-cells'>
    <view class='weui-cell'>
      <view class='weui-cell__bd'>
        <textarea class='weui-textarea' name='reviewBody' placeholder='亲, 这个活动攻略肿么样?' style='height: 8.3em' />
        <view class='weui-textarea-counter'>0/200</view>
      </view>
    </view>
  </view>
  <view class='weui-cells hui-vskip'>
    <view class='weui-cell'>
      <view class='weui-cell__bd'>
        <view class='weui-uploader'>
          <view class='weui-uploader__hd'>
            <text class='weui-uploader__title'>上传照片</text>
            <text class='weui-uploader__info'>{{tempFilePaths.length}}/9</text>
          </view>
          <view class='weui-uploader__bd'>
            <view class='weui-uploader__files'>
              <block wx:for='{{tempFilePaths}}' wx:key='*this'>
                <view class='weui-uploader__file' bindtap='previewImage'>
                  <image class='weui-uploader__img' src='{{item}}' mode='aspectFill' />
                </view>
              </block>
            </view>
            <block wx:if='{{tempFilePaths.length<9}}'>
              <view class='weui-uploader__input-box'>
                <view class='weui-uploader__input' bindtap='chooseImage' />
              </view>
            </block>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class='weui-btn-area'>
    <button class='weui-btn' loading='{{submitting}}' type='primary' form-type='submit'>提交</button>
    <button class='weui-btn' form-type='reset'>重置</button>
  </view>
</form>